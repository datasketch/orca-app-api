              if (depto == "Archipiélago de San Andrés") depto <- "san_andres"
              if (depto == "Bogotá D.C.") depto <- "bogota_dc"
              #"narino"
              depto <- gsub(" ", "_",
                            stri_trans_general(
                              str = tolower(depto),
                              id = "Latin-ASCII"))
